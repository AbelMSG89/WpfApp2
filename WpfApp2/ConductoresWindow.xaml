<Window x:Class="WpfApp2.ConductoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Lista de Conductores - Sistema de Transportes" Height="500" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Margin="10,10,10,0">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="LISTA DE CONDUCTORES" 
                           HorizontalAlignment="Center" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Gestion de conductores registrados" 
                           HorizontalAlignment="Center" 
                           FontSize="12" 
                           Foreground="White"/>
            </StackPanel>
        </Border>
        
        <!-- Search Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,10">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBox x:Name="txtBuscar" Width="200" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnBuscar" Content="??" Width="35" Height="30" 
                    Background="#2196F3" Foreground="White" BorderThickness="0"
                    Click="btnBuscar_Click"/>
            <Button x:Name="btnNuevo" Content="NUEVO" Width="80" Height="30" 
                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                    Margin="20,0,0,0" Click="btnNuevo_Click"/>
        </StackPanel>
        
        <!-- Data Grid -->
        <DataGrid Grid.Row="2" x:Name="dgConductores" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Background="White"
                  Margin="20,10"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#E0E0E0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" Width="150"/>
                <DataGridTextColumn Header="DNI" Binding="{Binding DNI}" Width="100"/>
                <DataGridTextColumn Header="Licencia" Binding="{Binding Licencia}" Width="100"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="120"/>
                <DataGridTemplateColumn Header="Acciones" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Editar" Width="60" Height="25" 
                                        Background="#FF9800" Foreground="White" BorderThickness="0"
                                        Margin="2" Click="btnEditar_Click"/>
                                <Button Content="Eliminar" Width="60" Height="25" 
                                        Background="#F44336" Foreground="White" BorderThickness="0"
                                        Margin="2" Click="btnEliminar_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Footer -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
            <TextBlock x:Name="lblTotal" Text="Total: 0 registros" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button x:Name="btnCerrar" Content="CERRAR" 
                    Width="80" Height="30" FontSize="12"
                    Background="#9E9E9E" Foreground="White" BorderThickness="0"
                    Click="btnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="WpfApp2.CamionesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Registro de Camiones - Sistema de Transportes" Height="450" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF5722" Margin="10,10,10,0">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="REGISTRO DE CAMIONES" 
                           HorizontalAlignment="Center" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Gestion de vehiculos de transporte" 
                           HorizontalAlignment="Center" 
                           FontSize="12" 
                           Foreground="White"/>
            </StackPanel>
        </Border>
        
        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="50,30" VerticalAlignment="Center">
            <!-- Peso Maximo -->
            <TextBlock Text="Peso Maximo (Kg):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPesoMaximo" Height="35" FontSize="14" Margin="0,0,0,20"/>
            
            <!-- Placa -->
            <TextBlock Text="Placa:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPlaca" Height="35" FontSize="14" Margin="0,0,0,20"/>
            
            <!-- Peso Vacio -->
            <TextBlock Text="Peso Vacio (Kg):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPesoVacio" Height="35" FontSize="14" Margin="0,0,0,30"/>
        </StackPanel>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button x:Name="btnGuardar" Content="GUARDAR" 
                    Width="100" Height="35" FontSize="12" FontWeight="Bold"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                    Margin="0,0,10,0" Click="btnGuardar_Click"/>
            <Button x:Name="btnLimpiar" Content="LIMPIAR" 
                    Width="100" Height="35" FontSize="12" FontWeight="Bold"
                    Background="#FF9800" Foreground="White" BorderThickness="0"
                    Margin="0,0,10,0" Click="btnLimpiar_Click"/>
            <Button x:Name="btnCerrar" Content="CERRAR" 
                    Width="100" Height="35" FontSize="12" FontWeight="Bold"
                    Background="#9E9E9E" Foreground="White" BorderThickness="0"
                    Click="btnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>